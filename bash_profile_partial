#
# Git / bash integration
#
source ~/dotfiles/bash-git-prompt/gitprompt.sh
GIT_PROMPT_ONLY_IN_REPO=1

# Cows are lovely, but what ansible does with cowsay is bit much.
export ANSIBLE_NOCOWS=1

# Some aliases
alias ve="vagrant exec"
alias setclip="xclip -selection c"
alias getclip="xclip -selection clipboard -o"

if [ -d "${HOME}/vagrant_devbox" ]; then
  alias vb="pushd . ; (cd ${HOME}/vagrant_devbox && (vagrant ssh || (vagrant up && vagrant ssh))) ; popd"
fi

# Moar colors
if [ "${TERM}" == "xterm" ]; then
  export TERM=xterm-256color
fi

# Virtualenv, if installed/being used
if [ -f "/usr/local/bin/virtualenvwrapper.sh" ]; then
	export WORKON_HOME=$HOME/.virtualenvs
	export PROJECT_HOME=$HOME/src
	export VIRTUALENVWRAPPER_VIRTUALENV_ARGS='--no-site-packages -p python3.4'
	source /usr/local/bin/virtualenvwrapper.sh
fi

